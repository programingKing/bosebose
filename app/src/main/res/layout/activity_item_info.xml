<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="kr.co.edge.bosebose.MainActivity">

<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <ImageButton
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:background="#ffffff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/backBtn"
                android:src="@drawable/backbutton"
                android:layout_weight="0.8"/>

            <TextView
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/thingsStoreName"
                android:text="hello"
                android:layout_weight="7.7"/>

            <ImageButton
                android:padding="9dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/headerFavoriteThingsBtn"
                android:src="@drawable/heart"
                android:layout_margin="5dp"
                android:layout_weight="1.5"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/thingsImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:fillColor="#FFFFFFFF"
                    app:pageColor="#00000000"
                    app:radius="10dp"
                    app:slideInterval="10000"
                    app:strokeColor="#ffffff"
                    app:strokeWidth="1dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">
                    <LinearLayout
                        android:layout_margin="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_weight="8.5"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="타이틀"
                            android:textSize="10pt"
                            android:gravity="center_vertical"
                            android:id="@+id/thingsTitle"/>
                        <ImageButton
                            android:padding="5dp"
                            android:layout_weight="1.5"
                            android:scaleType="fitCenter"
                            android:background="#ffffff"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/like"
                            android:id="@+id/thingsLIke"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:text="￦"
                        android:textSize="20dp"/>
                        <TextView
                            android:gravity="center_vertical"
                        android:layout_weight="9"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:text="hello"
                        android:id="@+id/thingsContent"
                        android:textSize="20dp"/>
                        </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="○"
                            android:textSize="20dp"/>
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="9"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="hello"
                            android:id="@+id/thingsPrice"
                            android:textSize="20dp"/>
                    </LinearLayout>


                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:text="hello"
                        android:id="@+id/thingsTag"
                        android:textSize="30dp"/>
                    <ImageButton
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/move"
                        android:scaleType="fitCenter"
                        android:background="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                         />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>