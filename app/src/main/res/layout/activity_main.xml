<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.edge.bosebose.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <ImageButton
                android:text="보세보세"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/headerMainLogoBtn"
                android:layout_weight="4"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                />

            <ImageButton
                android:scaleType="fitCenter"
                android:background="#ffffff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/headerFavoriteStoreBtn"
                android:src="@drawable/heart"
                android:padding="5dp"
                android:layout_weight="1"/>

            <ImageButton
                android:scaleType="fitCenter"
                android:background="#ffffff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/headerFavoriteThingsBtn"
                android:src="@drawable/start"
                android:padding="5dp"
                android:layout_weight="1"/>

            <ImageButton
                android:scaleType="fitCenter"
                android:background="#ffffff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/headerSearchBtn"
                android:src="@drawable/search"
                android:padding="5dp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <ImageButton
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:background="#ffffff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/secHeaderThings"
                android:src="@drawable/product"
                android:layout_weight="1"/>
            <ImageButton
                android:background="#ffffff"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/secHeaderStores"
                android:src="@drawable/store"
                android:layout_weight="1"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/mian_grid_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </LinearLayout>



</RelativeLayout>
